<%- include ('../../partials/head') %>
<%- include ('../../partials/navbar') %>
<div class="container">
    <br>
    <div class="card">
        <div class="card-header">
            <h2>Escreva seu artigo</h2>
        </div>
        <div class="card-body">
            <form action="/articles/save" method="post">
                <label for="title">Titulo do artigo</label>
                <input class="form-control" name="title" placeholder="Defina o titulo da sua categoria" type="text"><br>
                <textarea class="form-control" id="article" name="body" placeholder="Escreva seu artigo aqui"></textarea><br>
                <label>Defina a categoria do artigo</label><br>
                <select name="category">
                    <% categories.forEach(category => { %>
                        <option value="<%= category.id %>"><%= category.title %></option>
                    <% }) %>
                </select><br>
                <br>
                <button class="btn btn-primary">Cadastrar</button>
            </form>
        </div>
    </div>
</div>
<%- include ('../../partials/end') %>
<script src="/tinymce/tinymce.min.js"></script>
<script>

    tinymce.init({
        language: 'pt_BR',
        selector: "#article",
        plugins: 'advlist autolink link image lists print preview hr searchreplace wordcount fullscreen insertdatetime media save table paste emoticons'
    })

</script>